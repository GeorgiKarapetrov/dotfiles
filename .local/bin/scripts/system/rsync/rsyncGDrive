#!/bin/bash

mount | grep "${HOME}/Documents/cloud/gdrive" >/dev/null || /usr/bin/google-drive-ocamlfuse "${HOME}/Documents/cloud/gdrive"

rsync -uPO $HOME/Documents/cloud/gdrive/keepass/Home.kdbx $HOME/Documents/misc/KeePass/Home-$(date -u +%Y-%m-%d)
rsync -uPO $HOME/Documents/cloud/gdrive/keepass/Home.kdbx $HOME/Documents/cloud/gdrive/keepass/Home-$(date -u +%Y-%m-%d)

rsync -urPOR --delete-after $HOME/.ssh $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR /etc/vconsole.conf $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR /etc/X11/xorg.conf.d/40-dpi.conf $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR /etc/X11/xinit/xserverrc $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR /var/spool/cron/georgi $HOME/Documents/cloud/gdrive/Home/
# rsync -urPOR --delete-after /etc/crypt/keys $HOME/Documents/cloud/gdrive/Home/
# rsync -urPOR /etc/crypttab $HOME/Documents/cloud/gdrive/Home/
# rsync -urPOR /crypto_keyfile.bin $HOME/Documents/cloud/gdrive/Home/

rsync -urPOR --delete-after $HOME/.gnupg $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR --delete-after $HOME/.local/share/password-store/ $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR /boot/grub/themes/Vimix/theme.txt $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR /boot/grub/themes/Vimix/archlinux07.jpg $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR /etc/default/grub $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR --delete-after /etc/lightdm/ $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR --delete-after /etc/profile.d/ $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR --delete-after /etc/ssh $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR --delete-after /etc/udev/rules.d/ $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR /etc/sysctl.conf $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR /etc/systemd/system/fstrim.timer.d/override.conf $HOME/Documents/cloud/gdrive/Home/
rsync -urPOR --delete-after /usr/share/texmf/tex/latex/AltaCV/ $HOME/Documents/cloud/gdrive/Home/

